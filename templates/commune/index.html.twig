{% extends 'base.html.twig' %}

{% block title %}Commune{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
   <h1 style="text-align:center;">Voici toutes les communes :</h1>  <br/><br/>
    {% for commune in communes %}
        <div class="row">
            <div class="col-sm">
                La commune est {{ commune.nom }}
            </div>
            <div class="col-sm">
               la population est de  {{ commune.population | number_format(0, ',', ' ') }} habitants
            </div>
            <div class="col-sm">
                {% for med in commune.media %}
                    <img width="100" height="100" src="{{ med.image }}" alt="{{ med.article }}">
                    <p>{{ med.video }} <p>
                   
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}